class MusicAlbum
  def initialize
    @musics = []
    @babels = []
  end

  # 2 - list all music_album
  def list_music_albums
    if @musics.length.positive?
      @musics.each do |music|
        puts " Name: #{music.name}, Publish_date: #{music.publish_date}"
      end
    else
      puts 'No music_album added yet!'
    end
  end

 # 5 - list all list_labels
  def list_labels
    if @labels.length.positive?
      @labels.each do |label|
        puts " title: #{label.title}, color: #{label.color}"
      end
    else
      puts 'There is no label added yet!'
    end
  end

  # '8 - Create a music album',
  def create_music_albums
    print('Name: ')
    name = gets.chomp
    print 'It\'s on_spotify? [Y/N]: '
    on_spotify = gets.chomp != 'n'
    print('publish_date: ')
    publish_date = gets.chomp
  
    print 'Would you like to give some additional informations? [Y/N]: '
    label_action = gets.chomp != 'n'

    # if(label_action)
    #   print('Title: ')
    #   title = gets.chomp
    #   print('Color: ')
    #   color = gets.chomp
    # end
  
    @musics << MusicAlbum.new(name, on_spotify, publish_date)
    puts('MusicAlbum created successfully!')
  end
end

new_music = MusicAlbum.new
new_music.create_music_albums